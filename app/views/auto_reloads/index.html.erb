
<%= grid(@tasks_grid, :show_filters => :always, :hide_submit_button => true) do |g|

  g.column :name => 'ID', :attribute => 'id', :auto_reload => true

  g.column :name => 'Title', :attribute => 'title', :auto_reload => true, :negation_in_filter => true

  g.column :name => 'Archived', :attribute => 'archived', :auto_reload => true


  g.column :name => 'Status', :attribute => 'status_id', :custom_filter => Status.to_dropdown, :auto_reload => true  do |task|
    task.status.name if task.status
  end

  g.column :name => 'Project Name', :attribute => 'project_id', :custom_filter => Project.to_dropdown, :auto_reload => true do |task|
    task.project.name if task.project
  end

  g.column :name => 'Due', :attribute => 'due_date', :auto_reload => true, :helper_style => :calendar do |task|
    task.created_at.to_s(:short)
  end


  g.column :name => 'Added', :attribute => 'created_at', :auto_reload => true, :helper_style => :calendar do |task|
    task.created_at.to_s(:short)
  end

  g.column   do |task|
    link_to('Edit', edit_task_path(task))
  end
end -%>