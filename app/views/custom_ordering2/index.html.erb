<%= grid(@tasks_grid, :show_filters => :always) do |g|

  g.column :name => 'ID', :attribute => 'id', :filter => false

  g.column :name => 'Title', :attribute => 'title'

  g.column :name => 'Priority', :attribute => 'name', :model => 'Priority' do |task|
    task.priority.name if task.priority
  end

  g.column :name => 'Status', :attribute => 'name', :model => 'Status' do |task|
    task.status.name if task.status
  end

  g.column :name => 'Project Name', :attribute => 'name', :model => 'Project' do |task|
    task.project.name if task.project
  end

  g.column :name => 'Assigned To', :attribute => 'name', :model => 'User' do |task|
    task.assigned_users.collect{|user| user.name}.to_sentence
  end


  g.column   do |task|
    link_to('Edit', edit_task_path(task))
  end
end -%>
