<div style="margin: 20px">
<%= button_to_function "Export To CSV (custom CSV export button)", export_to_csv_javascript(@tasks_grid) %>
</div>

<%= grid(@projects_grid, :show_filters => :always, :hide_csv_button => true) do |g|

  g.column :name => 'ID', :attribute => 'id', :filter => false

  g.column :name => 'Project Name', :attribute => 'name'


  g.column  :name => 'Customer company', :model_class => 'Company', :attribute => 'name' do |task|
    task.customer.name if task.customer
  end

  g.column  :name => 'Supplier company',
            :model_class => 'Company', :attribute => 'name', :table_alias => 'suppliers_projects' do |task|
    task.supplier.name if task.supplier
  end

end -%>
